<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="loginBtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">18dip</item>
        <item name="android:layout_marginRight">18dip</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">@dimen/margin40dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="loginEditStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">18dip</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLength">18</item>
        <item name="android:layout_alignParentTop">@dimen/margin40dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="loginTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="divideh">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divide</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="dividev">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divide</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>
    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>
    <!--pager tab-->
    <style name="pagertab_style">
        <item name="android:background">@drawable/tab_bg_normal</item>
        <item name="apTabBackground">@drawable/tab_bg_transparent</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">@drawable/tab_color_select</item>
        <item name="apTabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="apTabUnderlineColor">#1A000000</item>
        <item name="apTabDividerColor">#00000000</item>
        <item name="apTabShouldExpand">false</item>
        <item name="apTabPaddingLeftRight">8dp</item>
        <item name="apTabPaddingTopBottom">2dp</item>
        <item name="apTabDrawMode">text</item>
        <item name="apTabTextSelectColor">@color/colorPrimaryDark</item>
    </style>
    <style name="pagertab_icon_style">
        <item name="android:background">@drawable/tab_bg_normal</item>
        <item name="apTabBackground">@drawable/tab_bg_normal</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@drawable/tab_color_select</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="apTabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="apTabUnderlineColor">#1A000000</item>
        <item name="apTabDividerColor">#00000000</item>
        <item name="apTabShouldExpand">false</item>
        <item name="apTabPaddingLeftRight">8dp</item>
        <item name="apTabPaddingTopBottom">6dp</item>
        <item name="apTabTextSelectColor">@color/colorPrimaryDark</item>
    </style>
</resources>
